
<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Main Category</th>
      <th>Sub Category</th>
      <th>Post Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><!-- blank --></td>
        <td><%= category.posts.count %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'View', display_category_path(category), target: "_blank" %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>



      <% category.sub_categories.each do |sub_category| %>
        <tr>
          <td><!-- blank --></td>
          <td><%= sub_category.name %></td>
          <td><%= sub_category.posts.count %></td>
          <td><%= link_to 'Edit', edit_category_path(sub_category) %></td>
          <td><%= link_to 'View', display_category_path(sub_category), target: "_blank" %></td>
          <td><%= link_to 'Delete', sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>



    <% end %>
  </tbody>
</table>
