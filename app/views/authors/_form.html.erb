<%= form_with(model: author, local: true, html: { class: 'dashboard_form' }) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
      <% author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
  <%= form.label :profile_image %>
  <%= form.file_field :profile_image %>
</div>

<% if author.profile_image.attached? %>
  <%= image_tag rails_blob_url(author.profile_image), style: 'height: 100px; width: auto;' %>
  <%= link_to 'Delete Main Image', delete_attachment_url(id: author.profile_image.id),
                              method: :delete,
                              confirm: { data: 'Are you sure?' },
                              style: 'display: block;' %>
<% end %>

  <div class="field">
    <%= form.label :email_address %>
    <%= form.text_field :email_address %>
  </div>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
