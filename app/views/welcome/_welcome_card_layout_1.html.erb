<div class="row">
  <div class="col-8">
      <div class="image-height-wrapper">
        <!-- featured article 2 -->
        <%= link_to "#" do %>
          <div class="image-half-height" style="background-image: url(<%= asset_url 'cat.jpg' %>)">
            <h2 class="left-hero-text">Other Article</h2>
          </div>
        <% end %>
        <!-- featured article 3 -->
        <%= link_to "#" do %>
          <div class="image-half-height" style="background-image: url(<%= asset_url 'sample_hero.jpg' %>)">
            <h2 class="left-hero-text">Other Article Number 2</h2>
          </div>
        <% end %>
      </div>
  </div>

  <div class="col-4 welcome-initial-sidebar">

    <h2 class="welcome-title"><%= link_to category.name, display_category_path(category) %></h2>

    <div class="popular-posts">

      <ul>
        <% Post.last(10).each do |post| %>
        <li><%= link_to post.title, display_post_path(post) %></li>
        <li>900 views</li>
        <% end %>
      </ul>

    </div>

    <!-- Subscribe form???? -->

    <!-- <div class="subscribe-form"> -->
    <div class="subscribe-sidebar">

        <div class="inner-subscribe-sidebar">

        <h4>Subscribe</h4>
        <%= render 'shared/subscribe_form' %>


      </div>

    </div>

    <!-- </div> -->


  </div>

</div>






