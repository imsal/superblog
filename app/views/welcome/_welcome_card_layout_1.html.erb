  <div class="col-4">
    <h2 class="welcome-title"><%= link_to "x", display_category_path(category) %></h2>
  </div>
  <div class="col-4">
    <h2 class="welcome-title"><%= link_to category.name, display_category_path(category) %></h2>
  </div>
</div>

<div class="row">

  <div class="col-4">

    <div class="image-height-wrapper">
      <a href="#">
        <div class="image-half-height" style="background-image: url(<%= asset_url 'cat.jpg' %>)"></div>
      </a>

      <a href="#">
        <div class="image-half-height" style="background-image: url(<%= asset_url 'sample_hero.jpg' %>)"></div>
      </a>
    </div>

  </div>

  <div class="col-4">

    <div class="image-height-wrapper">
      <a href="#">
        <div class="image-half-height" style="background-image: url(<%= asset_url 'about_me.jpg' %>)"></div>
      </a>

      <a href="#">
        <div class="image-half-height" style="background-image: url(<%= asset_url 'cat.jpg' %>)"></div>
      </a>
    </div>

  </div>

  <div class="col-4 welcome-initial-sidebar">

    <div class="popular-posts">

      <ul>
        <% Post.last(5).each do |post| %>
          <li><%= link_to post.title, display_post_path(post) %></li>
          <li>900 views</li>
        <% end %>
      </ul>

    </div>

    <div class="subscribe-sidebar">
      <div class="inner-subscribe-sidebar">
        <h4>Subscribe</h4>
        <%= render 'shared/subscribe_form' %>
      </div>
    </div>

  </div>

</div>

