
<section class="welcome-page-full-hero">

  <div class="hero-text">
      <!-- <h1 class="impact">ProveYourWealth</h1> -->
  </div>

</section>



<div class="top-posts-wrapper">
  <div class="top-posts-left">
    <h2>Featured</h2>
  </div>

  <div class="top-posts-right">
    <h2>Popular</h2>
    <ul>
      <% Post.last(10).each do |post| %>
      <li><%= link_to post.title, display_post_path(post) %></li>
      <li>900 views</li>
      <% end %>

    </ul>
  </div>
</div>




<h2 class="welcome-title">New Posts</h2>
<%= render 'shared/two_column_card_layout', iteration: Post.first(2)  %>
<%= render 'shared/card_list_layout', iteration: Post.last(6)  %>
<%= render 'shared/text_only_card_list_layout', iteration: Post.last(6)  %>

<h2 class="welcome-title">Recommended Posts</h2>
<%= render 'shared/two_column_card_layout', iteration: Post.first(2)  %>
<%= render 'shared/card_list_layout', iteration: Post.last(6)  %>
<%= render 'shared/text_only_card_list_layout', iteration: Post.last(6)  %>






<div class="welcome-subscribe-box-container">
  <div class="welcome-subscribe-box">
    <div class="welcome-subscribe-text">

      <p>Subscribe... <span>before it's too late!</span></p>
    </div>

    <div class="welcome-subscribe-form">
      <%= render 'shared/subscribe_form' %>
  </div>
  </div>
</div>
