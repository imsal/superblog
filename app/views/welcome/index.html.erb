<% Category.main_categories.each_with_index do |category, index| %>
  <% if index % 2 == 0 %>
    <%= render 'welcome_card_layout_2', category: category, subscription_message: display_subscription_message(index) %>
  <% else %>
    <%= render 'welcome_card_layout_1', category: category, subscription_message: display_subscription_message(index) %>
  <% end %>
<% end %>
