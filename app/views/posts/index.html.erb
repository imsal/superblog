<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created</th>
      <th>Category</th>
      <th>Page Views</th>
      <th>Active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @posts.each do |post| %>
<tr>
  <td><%= post.title %></td>
  <td><%= post.created_at.strftime('%Y/%d/%m') %></td>
  <td><%= post.category.name %></td>
  <td><%= post.page_count %></td>
  <td><%= post.active %></td>
  <td><%= link_to 'Edit', edit_post_path(post.slug) %></td>
  <td><%= link_to 'View', completed_display_post_path(post), target: '_blank' %></td>
  <td><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>
